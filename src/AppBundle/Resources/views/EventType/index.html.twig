{% extends '::base.html.twig' %}

{% block body -%}
    <div class="container-fluid">
    <h1>EventType list</h1>

    <table class="table table-condensed table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Icon</th>
                <th>Colorname</th>
                <th>Isprimary</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('eventtype_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.icon }}</td>
                <td>{{ entity.colorName }}</td>
                <td>{{ entity.isPrimary }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul class="list-unstyled list-inline">
                    <li>
                        <a href="{{ path('eventtype_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('eventtype_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <ul>
            <li>
                <a href="{{ path('eventtype_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </div>
    {% endblock %}
